    <script>
        function toggleStage(element) {
            const allStages = document.querySelectorAll('.stage');
            allStages.forEach(stage => {
                if (stage !== element) {
                    stage.classList.remove('active');
                }
            });
            element.classList.toggle('active');
        }
        
        function showNeuralPathways() {
            const pathwaysContent = document.querySelector('.stage:nth-child(4) .stage-content');
            const existingInfo = document.getElementById('neural-pathways-info');
            
            if (existingInfo) {
                existingInfo.remove();
                return;
            }
            
            const newPathways = document.createElement('div');
            newPathways.id = 'neural-pathways-info';
            newPathways.className = 'highlight-box';
            newPathways.innerHTML = `
                <h4>Neural Pathway Details</h4>
                <p>When a dog inhales, scent molecules bind to receptors in the olfactory epithelium. These signals are transmitted via the olfactory nerve to the olfactory bulb, then to the olfactory cortex, amygdala (for emotional processing), and entorhinal cortex (for memory). This direct connection to the limbic system explains the powerful link between scent and emotion/memory in dogs.</p>
            `;
            pathwaysContent.appendChild(newPathways);
        }
        
        // P5.js background animation
        function setup() {
            let canvas = createCanvas(windowWidth, windowHeight);
            canvas.parent('canvas-container');
            background(245, 245, 245);
        }
        
        let particles = [];
        
        function draw() {
            clear();
            
            // Add new particles occasionally
            if (frameCount % 15 === 0) {
                particles.push({
                    x: random(width),
                    y: height + 10,
                    size: random(3, 8),
                    speed: random(1, 3),
                    opacity: random(100, 200),
                    color: color(random(20, 60), random(90, 140), random(180, 220))
                });
            }
            
            // Update and draw particles
            for (let i = particles.length - 1; i >= 0; i--) {
                let p = particles[i];
                p.y -= p.speed;
                p.opacity -= 0.5;
                
                noStroke();
                fill(red(p.color), green(p.color), blue(p.color), p.opacity);
                ellipse(p.x, p.y, p.size);
                
                // Remove particles that are off-screen or faded
                if (p.y < -10 || p.opacity <= 0) {
                    particles.splice(i, 1);
                }
            }
            
            // Draw connections between nearby particles
            stroke(0, 150, 136, 40);
            strokeWeight(1);
            for (let i = 0; i < particles.length; i++) {
                for (let j = i + 1; j < particles.length; j++) {
                    let d = dist(particles[i].x, particles[i].y, particles[j].x, particles[j].y);
                    if (d < 100) {
                        line(particles[i].x, particles[i].y, particles[j].x, particles[j].y);
                    }
                }
            }
        }
        
        function windowResized() {
            resizeCanvas(windowWidth, windowHeight);
        }
    </script>
